<div class="container">
    <h1 style="color: #6495ed;">Survey List</h1>
    <% if(displayName) { %>
    <a href="/survey-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Create a Survey</a>
    <% } %>
    <div class="row">
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <% if(displayName) { %>
                        <th scope="col">Visibility</th>
                        <th>Report</th>
                        <!-- <th>Edit</th> -->
                        <th>Customize</th>
                        <th>Delete</th>
                        <% } else { %>
                        <th>Join</th>
                        <% } %> 
                    </tr>
                </thead>
                <tbody id="surveyList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < surveys.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><a href = '<%= (displayName) ? "/survey-edit/" + surveys[count]._id : "/survey-join/" + surveys[count]._id %>'>
                                 <!-- "/survey-edit/<%= surveys[count]._id %>"> -->
                                <%= surveys[count].title %> </a></td>
                            <td><%= surveys[count].startdate.toLocaleString() %></td>
                            <td><%= surveys[count].enddate.toLocaleString() %></td>
                            <% if(displayName) { %>
                            <td class=<%= surveys[count].active ? "table-success" :"table-danger" %>><%= surveys[count].active ? "Active" :"Inactive" %></td>
                            <td class="text-center col-1">
                                <a href="/survey-edit/<%= surveys[count]._id %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fa fa-bar-chart"></i> </a>
                            </td>

                            <!-- <td class="text-center col-1">
                                <a href="/survey-edit/<%= surveys[count]._id %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td> -->

                            <td class="text-center col-1">
                                <a href="/survey-customize/<%= surveys[count]._id %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i></a>
                            </td>

                            <td class="text-center col-1">
                                <a href="/survey-delete/<%= surveys[count]._id %>"
                                    class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> </a>
                            </td>
                            <% } else { %>

                                <td class="text-center col-1">
                                    <a href="/survey-join/<%= surveys[count]._id %>"
                                        class="btn btn-primary btn-sm">
                                        <i class="fas fa-pencil-alt"></i> </a>
                                </td>

                            <% } %> 
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
