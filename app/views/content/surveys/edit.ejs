<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %>: <%= survey.title%></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= survey._id %>" >
                
                <div class="form-group">
                    <!-- <%= JSON.stringify(survey.questions) %> -->
                    <label for="surveyTitleField">Survey Title</label>
                    <input type="text" class="form-control"
                    id="surveyTitleField"
                    value="<%= survey.title%>"
                    name="title" required>
                </div>

                <div class="form-group">     
                    <label for="startDateField">Start Date</label>
                    <input type="datetime-local" class="form-control"
                    id="startDateField"
                    value=<%= survey.startdate.toISOString().substring(0, survey.startdate.toISOString().indexOf("T") + 6) %>
                    
                    name="startdate" required>
                </div>

                <div class="form-group">
                    <label for="endDateField">End Date</label>
                    <input type="datetime-local" class="form-control"
                    id="endDateField"
                    value= <%= survey.enddate.toISOString().substring(0, survey.startdate.toISOString().indexOf("T") + 6) %>
                    name="enddate" required>
                </div>
              
                <div class="form-group">
                    <label for="activeCheckBoxField">Active</label>
                    <input type="checkbox"  class="checkbox"
                    id="activeCheckBoxField" name="active"
                    <%= survey.active? "checked" : "" %> >                    
                </div>

                <div class="form-group">
                    <input type="hidden" class="form-control"
                    name="userid" required id="userIdField"
                    value="<%= survey.userid%>" >                    
                </div>


                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                <a href="/survey-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>